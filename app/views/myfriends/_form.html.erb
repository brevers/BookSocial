<div class="jumbotron jumbotron-fluid" style="width: 700px;">
   <div class="container">
    <%= form_with(model: myfriend) do |form| %>
      <% if myfriend.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(myfriend.errors.count, "error") %> prohibited this myfriend from being saved:</h2>

          <ul>
            <% myfriend.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :user_name, style: "display: block" %>
        <%= form.text_field :user_name, class:"form-control", placeholder: "Friends Username" %>
        <br>
      </div>

      <div>
        <%= form.label :first_name, style: "display: block" %>
        <%= form.text_field :first_name, class:"form-control", placeholder: "Your friends name" %>
        <br>
      </div>

      <div>
        <%= form.label :email, style: "display: block" %>
        <%= form.text_field :email, class:"form-control", placeholder: "Friends Email" %>
      </div>

      <div>
        <%= form.number_field :user_id, id: :myfriend_user_id, class:"form-control", value: current_user.id, type: :hidden %>
        <br>
      </div>

      <div>
      <br>
        <%= form.submit "Create new Friend", class:"btn btn-success md", style:"width: 200px;" %>
      </div>
    <% end %>
  </div>
</div>