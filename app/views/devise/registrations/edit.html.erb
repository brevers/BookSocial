
<!--Modify Account Section-->
<div class="jumbotron jumbotron-fluid" style="width: 700px;">
   <div class="container">
    <h2 class="d-flex justify-content-center">Modify <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email,class:"w-50 form-control", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, class:"w-50 form-control", placeholder:"new password", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class:"w-50 form-control",autocomplete: "new-password" %>
      </div>

      <div class="field form-group">
        <%= f.label :current_password %> <i>(OLD password to confirm your changes)</i><br />
        <%= f.password_field :current_password, class:"w-50 form-control", autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class:"btn btn-success md", style:"width: 100px;" %>
        <br>
      </div>
    <% end %>
  </div>
</div>

<!--Cancel Account Section-->
<div class="jumbotron jumbotron-fluid" style="width: 700px;">
   <div class="container">
    <br>
      <h3 class="d-flex justify-content-center">Cancel My Account</h3>
      <br>
      <div class="d-flex align-items-center flex-column" style="height: 100px;">
        <p style="width: 450px;">Press the button to Cancel your account. ALERT! The following button will erase your account forever.
        <%= button_to "Cancel Account", registration_path(resource_name),class:"btn btn-danger md", style:"width: 170px;", data: { confirm: "Are you sure?" }, method: :delete %></p>
      </div>
      <%= link_to "Back", :back, class:"d-flex flex-row-reverse" %>
    </div>
  </div>
</div>