<div class="jumbotron jumbotron-fluid" style="width: 700px;">
   <div class="container">
      <h2 class="d-flex justify-content-center">Did you forget your password?</h2>
      <h6 class="d-flex justify-content-center">No worries! We can help</h6>
      <br>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field form-group">
          <div class="d-flex justify-content-center">
            <div class="pr-lg-5" style="width: 320px;">
              <%= f.label :email %>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <%= f.email_field :email, class:"w-50 form-control", placeholder:"email@example.com", autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="actions">
          <div class="d-flex justify-content-center">
            <%= f.submit "Reset Password", class:"btn btn-success md", style:"width: 200px;" %>
          </div>
        </div>
      <% end %>
    </div>
</div>