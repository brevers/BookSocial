<% if read&.book.present? %>
  <div class="card" style="width: 12rem;">
    <%= image_tag(read.book.cover, class: "img-responsive") %>
    <div class="card-body">
      <h5 class="card-title">
        <%= read.book.title %>
      </h5>
      <div style="padding-right: 10px">
        <%= button_to "Remove",
            remove_from_reads_url(read_id: read.id),
              method: :post,
              data: {turbo_confirm: "Are you sure?"},
              class: "btn btn-primary"
              %>
      </div>
    </div>
  </div>
<% end %>
